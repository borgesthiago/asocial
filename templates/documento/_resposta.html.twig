{% form_theme form 'form/form_div.html.twig' %}
<div class="ui grid">
    <div class="column">
        {{ form_start(form, {'attr': {'class': 'ui form'}}) }}
        <div class="fields">
            {{ form_row(form.numero, {'attr': {'data-row-class': 'three wide'}}) }}
             {{ form_row(form.tipo, {'attr': {'data-row-class': 'two wide'}}) }}
            {{ form_row(form.dataEmitido, {'attr': {'data-row-class': 'three wide'}}) }}
            {{ form_row(form.dataRecebido, {'attr': {'data-row-class': 'three wide'}}) }}
        </div>
         <div class="fields">
            {{ form_row(form.reiteracao, {'attr': {'data-row-class': 'two wide'}}) }}
            {{ form_row(form.documentoReiterado, {'attr': {'data-row-class': 'three wide'}}) }}
            {{ form_row(form.usuario, {'attr': {'data-row-class': 'six wide'}}) }}
        </div> 
        <div class="fields">
            {{ form_row(form.origem, {'attr': {'data-row-class': 'five wide'}}) }}
            {{ form_row(form.setor, {'attr': {'data-row-class': 'six wide'}}) }}
        </div> 
        <div class="fields">
            {{ form_row(form.destinatario, {'attr': {'data-row-class': 'five wide'}}) }}
            {{ form_row(form.prazo_resposta, {'attr': {'data-row-class': 'three wide'}}) }}
            {{ form_row(form.respondido, {'attr': {'data-row-class': 'three wide'}}) }}
        </div> 
        <div class="fields">
            {{ form_row(form.documento_resposta, {'attr': {'data-row-class': 'three wide'}}) }}
            {{ form_row(form.dataResposta, {'attr': {'data-row-class': 'three wide'}}) }}
        </div> 
        <div class="fields">
            <div class="ui right floated buttons">
                <button class="ui blue button"><i class="save icon"></i> {{ button_label|default('Salvar') }}</button>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}