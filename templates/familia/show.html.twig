{% extends 'base.html.twig' %}

{% block title %}Familia{% endblock %}

{% block body %}
<div class="espaco">
    <h1>Familiar</h1>

    <table class="ui celled table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ familium.id }}</td>
            </tr>
            <tr>
                <th>Usuário Responsável</th>
                <td>{{ familium.usuario.nome }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ familium.nome }}</td>
            </tr>
            <tr>
                <th>DataNascimento</th>
                <td>{{ familium.dataNascimento ? familium.dataNascimento|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>GrauParentesco</th>
                <td>{{ familium.grauParentesco }}</td>
            </tr>
            <tr>
                <th>Profissao</th>
                <td>{{ familium.profissao }}</td>
            </tr>
            <tr>
                <th>Ocupacao</th>
                <td>{{ familium.ocupacao }}</td>
            </tr>
            <tr>
                <th>Renda</th>
                <td>{{ familium.renda }}</td>
            </tr>
            <tr>
                <th>Escolaridade</th>
                <td>{{ familium.escolaridade }}</td>
            </tr>
            <tr>
                <th>FatorRisco</th>
                <td>{{ familium.fatorRisco }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('familia_index') }}"><button type="button" class="ui button secondary"><i class="fa fa-arrow-circle-left"></i> Voltar</button></a>

    <a href="{{ path('familia_edit', {'id': familium.id}) }}"><button type="button" class="ui brown button"><i class="edit icon"></i> Editar</button></a>
            
    {{ include('familia/_delete_form.html.twig') }}
    </div>
{% endblock %}
