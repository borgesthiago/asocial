{% form_theme form 'form/form_div.html.twig' %}
<div class="ui grid">
    <div class="column">
        {{ form_start(form, {'attr': {'class': 'ui form'}}) }}
        <div class="fields">
            {{ form_row(form.nome, {'attr': {'data-row-class': 'seven wide'}}) }}
            {{ form_row(form.dataNascimento, {'attr': {'data-row-class': 'three wide'}}) }}
            {{ form_row(form.grauParentesco, {'attr': {'data-row-class': 'two wide'}}) }}
        </div>
        <div class="fields">
            {{ form_row(form.profissao, {'attr': {'data-row-class': 'five wide'}}) }}
            {{ form_row(form.ocupacao, {'attr': {'data-row-class': 'five wide'}}) }}
            {{ form_row(form.renda, {'attr': {'data-row-class': 'two wide'}}) }}
        </div>
        <div class="fields">
            {{ form_row(form.escolaridade, {'attr': {'data-row-class': 'three wide'}}) }}
            {{ form_row(form.fatorRisco, {'attr': {'data-row-class': 'four wide'}}) }}
            {{ form_row(form.usuario, {'attr': {'data-row-class': 'five wide'}}) }}
        </div>
        <div class="fields">
            <div class="ui right floated buttons">
                <button class="ui primary button"><i class="save icon"></i>{{ button_label|default('Salvar') }}</button>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}