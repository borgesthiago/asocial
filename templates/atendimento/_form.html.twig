{% form_theme form 'form/form_div.html.twig' %}
<div class="ui grid">
    <div class="column">
        {{ form_start(form, {'attr': {'class': 'ui form'}}) }}
        <div class="fields">
            {{ form_row(form.data, {'attr': {'data-row-class': 'three wide'}}) }}
            {{ form_row(form.usuario, {'attr': {'data-row-class': 'three wide'}}) }}
            {{ form_row(form.funcionario, {'attr': {'data-row-class': 'three wide'}}) }}
        </div>
        <div class="fields">
            {{ form_row(form.relato, {'attr': {'data-row-class': 'eleven wide'}}) }}
        </div>
        <div class="fields">
            {{ form_row(form.tipo, {'attr': {'data-row-class': 'seven wide'}}) }}
        </div>            
        <div class="fields">
            <div class="ui buttons">
                <button class="ui blue button"><i class="save icon"></i>{{ button_label|default('Salvar') }}</button>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}