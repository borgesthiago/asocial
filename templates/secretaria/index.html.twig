{% extends 'base.html.twig' %}

{% block title %}Secretarias{% endblock %}

{% block body %}
<div class="espaco">
    <h3>Listagem de Secretarias</h3>  
    <div class="direita">
        <a href="{{ path('secretaria_new') }}"><button type="button" class="ui primary button"><i class="fa fa-plus-circle" aria-hidden="true"></i> Novo</button></a>
    </div>
    <table class="ui celled table">
        <thead>
            <tr class="ui center aligned">
                <th>Id</th>
                <th>Nome</th>
                <th>Bairro</th>
                <th>Telefone</th>
                <th>Email</th>
                <th>Equipamento</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for secretarium in secretarias %}
            <tr>
                <td>{{ secretarium.id }}</td>
                <td>{{ secretarium.nome }}</td>
                <td>{{ secretarium.bairro }}</td>
                <td>{{ secretarium.telefone }}</td>
                <td>{{ secretarium.email }}</td>
                <td>{{ secretarium.equipamento ? 'Sim' : 'Não' }}</td>
                <td>
                    <div class="ui small basic icon buttons">
                    <a href="{{ path('secretaria_show', {'id': secretarium.id}) }}"><button class="ui button"><i class="file green icon"></i></button></a>
                    <a href="{{ path('secretaria_edit', {'id': secretarium.id}) }}"><button class="ui button"><i class="edit blue icon"></i></button></a>
                    {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('secretaria_delete', {'id': secretarium.id}) }}"><button class="ui button"><i class="trash red icon"></i></button></a>
                    {% endif %}
                </div>                   
                </td>
            </tr>
        {% else %}
                <td colspan="6">nenhum registro encontrado</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
