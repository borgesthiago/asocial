{% extends 'base.html.twig' %}

{% block title %}Secretaria{% endblock %}

{% block body %}
<div class="espaco">
    <h1>Secretaria</h1>

    <table class="ui celled table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ secretarium.id }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ secretarium.nome }}</td>
            </tr>
            <tr>
                <th>Endereço</th>
                <td>{{ secretarium.endereco }}</td>
            </tr>
            <tr>
                <th>Bairro</th>
                <td>{{ secretarium.bairro }}</td>
            </tr>
            <tr>
                <th>Telefone</th>
                <td>{{ secretarium.telefone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ secretarium.email }}</td>
            </tr>
            <tr>
                <th>Equipamento</th>
                <td>{{ secretarium.equipamento ? 'Sim' : 'Não' }}</td>
            </tr>
            <tr>
                <th>Serviços</th>
                <td>{{ secretarium.servico.secretaria }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('secretaria_index') }}">back to list</a>

    <a href="{{ path('secretaria_edit', {'id': secretarium.id}) }}">edit</a>

    {{ include('secretaria/_delete_form.html.twig') }}
</div>
{% endblock %}
