<form method="post" class="delete form" action="{{ path('saude_delete', {'id': saude.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ saude.id) }}">
    <button class="ui red button"><i class="trash icon"></i> Delete</button>
</form>
